# SubOS Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
DEBUG=True
SECRET_KEY=change-this-to-a-secure-random-key
PORT=3038

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///subos.db

# ============================================
# External APIs (Optional)
# ============================================

# Currency Exchange Rates (Fixer.io)
# Get your API key at: https://fixer.io/
FIXER_API_KEY=

# AI Providers (Choose one or use all)
# OpenAI API Key - Get at: https://platform.openai.com/
OPENAI_API_KEY=

# Google Gemini API Key - Get at: https://makersuite.google.com/
GOOGLE_GEMINI_API_KEY=

# Ollama (Local AI) - No key needed, runs locally
# Install from: https://ollama.ai/
OLLAMA_HOST=http://localhost:11434

# OCR Providers
# Google Vision API Key - Get at: https://cloud.google.com/vision
GOOGLE_VISION_API_KEY=

# Tesseract OCR - No key needed, bundled with app
# Will be used as default OCR engine

# ============================================
# Notification Channels (Optional)
# Configure only the channels you want to use
# ============================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=True

# Discord Webhook
DISCORD_WEBHOOK_URL=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Pushover
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=

# ============================================
# Session & Security
# ============================================
SESSION_LIFETIME=2592000  # 30 days in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# ============================================
# File Uploads
# ============================================
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,svg

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3038

# ============================================
# Production Settings (Update before deployment)
# ============================================
# CORS_ORIGINS=https://yourdomain.com
# HTTPS_ONLY=True
# DATABASE_URL=sqlite:////path/to/production/subos.db
